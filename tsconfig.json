{
    "version": "1.6.0",
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": false,
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "experimentalAsyncFunctions": false,
        "sourceMap": true
    },
    "compileOnSave": false,
    "filesGlob": [
        "./client/**/*.ts",
        "./server/**/*.ts",
        "./shared/**/*.ts",
        "./gulpfile.ts",
        "./tools/**/*.ts",
        "!./tools/typings/tsd/**",
        "./tools/typings/tsd/tsd.d.ts",
        "!./dist/**",
        "!./test/**",
        "!.tmp/**",
        "!./node_modules/**"
    ],
    "files": [
        "./client/bootstrap.ts",
        "./client/components/app/app_spec.ts",
        "./client/components/app/app.ts",
        "./client/components/core/dto.ts",
        "./client/components/core/util.ts",
        "./client/components/core/web_constant.ts",
        "./client/components/home/home_spec.ts",
        "./client/components/home/home.ts",
        "./client/components/todo/todo_mock.ts",
        "./client/components/todo/todo_service.ts",
        "./client/components/todo/todo_spec.ts",
        "./client/components/todo/todo.ts",
        "./client/directives/Autofocus.ts",
        "./client/directives/XLarge.ts",
        "./client/pipes/CustomOrderByPipe.ts",
        "./server/bootstrap.ts",
        "./server/todo/todo_router.ts",
        "./server/todo/todo_service.ts",
        "./gulpfile.ts",
        "./tools/config.ts",
        "./tools/tasks-tools.ts",
        "./tools/typings/connect-livereload.d.ts",
        "./tools/typings/del.d.ts",
        "./tools/typings/gulp-inject.d.ts",
        "./tools/typings/gulp-inline-ng2-template.d.ts",
        "./tools/typings/gulp-nodemon.d.ts",
        "./tools/typings/gulp-plumber.d.ts",
        "./tools/typings/gulp-sass.d.ts",
        "./tools/typings/gulp-template.d.ts",
        "./tools/typings/gulp-tslint-stylish.d.ts",
        "./tools/typings/karma.d.ts",
        "./tools/typings/ng2_test.d.ts",
        "./tools/typings/ng2_testing_workaround.d.ts",
        "./tools/typings/open.d.ts",
        "./tools/typings/slash.d.ts",
        "./tools/typings/tiny-lr.d.ts",
        "./tools/typings/tsd/tsd.d.ts"
    ]
}
