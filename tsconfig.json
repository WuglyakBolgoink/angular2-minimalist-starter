{
  "compilerOptions": {
    "target": "es5",
    "module": "system",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "outFile": "dist/app/app.bundle.js"
  },
  "compileOnSave": false,
  "exclude": [
    "dist",
    "node_modules",
    "test",
    "tmp",
    "typings/browser.d.ts",
    "typings/browser",
    "typings/main.d.ts"
  ]
}
