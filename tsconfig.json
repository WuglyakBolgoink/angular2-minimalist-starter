{
    "version": "1.5.0",
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "outDir": "dist"
    },
    "filesGlob": [
        "typings/tsd.d.ts",
        "client/**/*.ts"
    ],
    "files": [
        "typings/tsd.d.ts",
        "client/bootstrap.ts",
        "client/components/app.ts",
        "client/components/dashboard/dashboard.ts",
        "client/components/home/home.ts",
        "client/components/todo/todo.ts",
        "client/directives/Autofocus.ts",
        "client/directives/XLarge.ts",
        "client/services/TodoService.ts"
    ]
}
