{
    "version": "1.6.0",
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": false,
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "experimentalAsyncFunctions": false,
        "sourceMap": true
    },
    "filesGlob": [
        "./client/**/*.ts",
        "./server/**/*.ts",
        "./gulpfile.ts",
        "./tools/**/*.ts",
        "./tsd_typings/**/*.d.ts"
    ],
    "compileOnSave": false,
    "exclude": [
        "./node_modules/**",
        "./tools/typings/tsd/**"
    ]
}
